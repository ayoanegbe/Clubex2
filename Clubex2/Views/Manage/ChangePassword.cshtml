@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header with-border">
                <h2 class="col-md-offset-3 box-title text-red">Change Password Form</h2>
            </div>
            <div class="login-box-body">
                <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">

                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="OldPassword" class="col-md-2 control-label"></label>
                        <div class="col-md-12">
                            <input asp-for="OldPassword" class="form-control form-control-solid placeholder-no-fix" autocomplete="off" placeholder="Old password" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewPassword" class="col-md-2 control-label"></label>
                        <div class="col-md-12">
                            <input asp-for="NewPassword" class="form-control form-control-solid placeholder-no-fix" autocomplete="off" placeholder="New password" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="col-md-2 control-label"></label>
                        <div class="col-md-12">
                            <input asp-for="ConfirmPassword" class="form-control form-control-solid placeholder-no-fix" autocomplete="off" placeholder="Confirm new password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-12">
                            <button type="submit" class="btn btn-info">Change password</button>
                        </div>
                    </div>
                    <div>
                        <i class="fa fa-arrow-left"></i>
                        <a asp-controller="Dashboard" asp-action="Index">Back to Dashboard</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
